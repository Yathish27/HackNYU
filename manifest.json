{
    "manifest_version": 3,
    "name": "Email Phishing and Spam Detector",
    "version": "1.0",
    "description": "Detect phishing and spam emails in Gmail using AI models.",
    "permissions": [
      "identity",
      "scripting",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "oauth2": {
      "client_id": "<YOUR_CLIENT_ID>.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    }
  }
  